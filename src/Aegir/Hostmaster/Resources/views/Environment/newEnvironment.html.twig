{% extends "AegirHostmaster::layout.html.twig" %}

{% block title "Aegir - New Environment" %}
{% block menu_active_projects "active" %}

{% block content_header '' %}

{% block content %}
    <h1 class="title">{{ 'environment.new.headline'|trans({}, 'AegirHostmaster') }}</h1>

    {%  if (form is defined) %}
    <form action="{{ url('post_environments') }}" method="POST" {{ form_enctype(form) }}>

        {{ form_widget(form) }}

        <input type="submit" value="{% trans from 'AegirHostmaster' %}environment.new.submit{% endtrans %}">
    </form>
    {% endif %}

{% endblock %}

{% set code = code(_self) %}
