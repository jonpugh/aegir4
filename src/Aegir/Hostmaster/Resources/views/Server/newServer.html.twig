{% extends "AegirHostmaster::layout.html.twig" %}

{% block title "Aegir - New Server" %}

{% block content_header '' %}

{% block content %}
    <h1 class="title">{{ 'server.new.headline'|trans({}, 'AegirHostmaster') }}</h1>

    {%  if (form is defined) %}
    <form action="{{ url('post_servers') }}" method="POST" {{ form_enctype(form) }}>

        {{ form_widget(form) }}

        <input type="submit" value="{% trans from 'AegirHostmaster' %}server.new.submit{% endtrans %}">
    </form>
    {% endif %}

{% endblock %}

{% set code = code(_self) %}
