{% extends "AegirHostmaster::layout.html.twig" %}

{% block title "Aegir - Edit Server" %}
{% block menu_active_servers "active" %}

{% block content_header '' %}

{% block content %}
    <h1 class="title">{{ 'server.edit.headline'|trans({'%id%': id}, 'AegirHostmaster') }}</h1>

    <form action="{{ url('put_servers', {'id': id}) }}" method="POST" {{ form_enctype(form) }}>
        <input type="hidden" name="_method" value="put" />

        {{ form_widget(form) }}

        <input type="submit" value="{% trans from 'AegirHostmaster' %}server.edit.submit{% endtrans %}">
    </form>
{% endblock %}

{% set code = code(_self) %}
